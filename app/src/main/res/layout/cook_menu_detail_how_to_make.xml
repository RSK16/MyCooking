<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">





    <!--五角星图案-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="5dp">
        <ImageView
            android:id="@+id/iv_cookMenuDetail_star1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/cook_detail_star_select"/>
<ImageView
            android:id="@+id/iv_cookMenuDetail_star2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/cook_detail_star_select"/>
<ImageView
            android:id="@+id/iv_cookMenuDetail_star3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/cook_detail_star_select"/>
<ImageView
            android:id="@+id/iv_cookMenuDetail_star4"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/cook_detail_star_select"/>
<ImageView
            android:id="@+id/iv_cookMenuDetail_star5"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/cook_detail_star_select"/>


    </LinearLayout>


    <!--浏览次数-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="5dp">
    <TextView
        android:id="@+id/tv_cookMenuDetail_the_numOf_watch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="999次浏览"/>

    </LinearLayout>

    <!--头像和名字-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_margin="5dp">
        
        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            app:civ_border_width="2dp"
            app:civ_border_color="#FECA07"
            android:id="@+id/iv_cookMenuDetail_the_picOf_author"
            android:layout_width="77dp"
            android:layout_height="77dp"
            android:src="@drawable/cook_detail_star_select"/>
        <TextView
            android:paddingTop="10dp"
            android:textSize="16sp"
            android:id="@+id/tv_cookMenuDetail_the_nameOf_author"
            android:textColor="#EA2000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的厨房"/>

    </LinearLayout>


    <!--描述-->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:gravity="center"
        >
        <TextView
            android:id="@+id/tv_cookMenuDetail_the_descriptionOf_cook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="菜谱介绍"/>

    </LinearLayout>


</LinearLayout>