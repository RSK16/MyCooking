<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/tv_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:id="@+id/buzhou_tv_id"
            android:gravity="center_vertical"
            android:textSize="18sp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="第一步"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <EditText
                android:id="@+id/buzhou_et_name"
                android:background="@drawable/tv_bg"
                android:text="添加名称，例如：洗菜"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <RelativeLayout
                android:id="@+id/buzhoupic_rl_dianji"
                android:background="@drawable/tv_bg"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageButton
                    android:clickable="false"
                    android:id="@+id/buzhou_ib_icon"
                    android:src="@drawable/btn_closed_red"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <EditText
        android:id="@+id/et_buzhou_desc"
        android:background="@drawable/tv_bg"
        android:hint="请添加步骤描述"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
    //底部
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <Button
            android:id="@+id/buzhou_btn_edit"
            android:text="编辑步骤"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/buzhou_btn_add"
            android:text="添加步骤"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>